@model IEnumerable<DomeSell.Models.Table_TypeProduct>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    if (TempData["action"] != null)
    {
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="alert alert-dismissible @TempData["action"].ToString()">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>แจ้งเตือน!</strong><a href="#" class="alert-link">@TempData["message"].ToString()</a>
                </div>
            </div>
        </div>
    }
    TempData["action"] = null;
    TempData["message"] = null;
}
<div class="panel panel-default">
    <div class="panel-heading">ประเภทสินค้าเครื่องจักรสาน</div>
    <div class="panel-body">
        <p>
            @Html.ActionLink("เพิ่มข้อมูล", "Create", null, new { @class = "btn btn-success" })
        </p>
        <table id="dtBasicExample" class="table table-striped table-bordered " cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.T_Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.T_Name)
                        </td>
                        <td class="text-center">
                            @Html.ActionLink("แก้ไข", "Edit", null, new { id = item.T_TypeProID }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("ลบข้อมูล", "Delete", null, new { id = item.T_TypeProID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>