@model IEnumerable<DomeSell.Models.Table_Oder>

@{
    ViewBag.Title = "Arrange";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">รอจัดส่ง</div>
    <div class="panel-body">
        <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.O_Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.O_Total)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Table_StatusBay.S_StaName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Table_User.U_Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.O_Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.O_Total)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Table_StatusBay.S_StaName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Table_User.U_Name)
                        </td>
                        <td>
                            @Html.ActionLink("รายการสินค้า", "DetailOder", "OrderAdmin", new { id = item.O_OderID }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("ดูหลักฐานการชำระเงิน", "DetailOr", "OrderAdmin", new { id = item.O_OderID }, new { @class = "btn btn-info" })
                            @Html.ActionLink("จัดส่ง", "transport", "OrderAdmin", new { id = item.O_OderID }, new { @class = "btn btn-primary" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>