@model IEnumerable<DomeSell.Models.Table_Oder>

@{
    ViewBag.Title = "HitoryOrder";
    Layout = "~/Views/Shared/_User.cshtml";
    if (Session["Username"] == null)
    {
        <script type="text/javascript">
            window.location.href = '@Url.Action("Index","User")';
        </script>
    }
}

<h2>ประวัติการซื้อ</h2>

<table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.O_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.O_Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.O_Status)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Table_User.U_PassWord)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.O_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.O_Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Table_StatusBay.S_StaName)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Table_User.U_PassWord)
                </td>*@
                <td style="text-align:center">
                    @Html.ActionLink("รายการ", "OrderDetail","User", new { id = item.O_OderID },new {@class ="btn btn-info"})
                </td>
            </tr>
        }
    </tbody>
</table>
