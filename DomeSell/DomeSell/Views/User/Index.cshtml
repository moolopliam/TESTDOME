@model IEnumerable<DomeSell.Models.Table_Product>

@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_User.cshtml";
}


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-sm-3 ">
            <div class="thumbnail">
                @if (item.P_IMG != null)
                {
                    <img src="data:image/png;base64,@Convert.ToBase64String(item.P_IMG)" alt="" class="img-thumbnail"  style="height: 200px;width: 200px">
                }
                    <div class="caption">
                        <h3> @Html.DisplayFor(modelItem => item.P_ProName)</h3>
                        <p> @Html.DisplayFor(modelItem => item.P_Price) ฿</p>
                        @*<p><a onclick="location.href = '@Url.Action("Bag", "User",new {idP = item.P_ProductID})&amout=' + $('#amout').val()" class="btn btn-primary">หยิบใส่กระกร้า</a>*@
                        <p><a href="@Url.Action("DetailProduct","User",new {id = item.P_ProductID})" class="btn btn-primary">หยิบใส่กระกร้า</a>
                    </div>
            </div>
        </div>
    }
    <!-- Thumbnails container -->
</div>
